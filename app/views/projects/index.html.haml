.block
  .block_head
    .bheadl
    .bheadr
    %h2 Projects
    %span.ajax-loading
    %ul
      %li
        = link_to "Add Project", new_project_path
  / .block_head ends
  .block_content
    %form{:action => "", :method => "post"}
      %table{:cellpadding => "0", :cellspacing => "0", :width => "100%", :id => "users"}
        %tr
          %th Name
          %th Path
          %th Branch
          %th Total Builds 
          %th.center Fail Rate
          %th Notifiers
          %td &nbsp;
        - @projects.each do |project|
          = render project

      / pagination
      /= will_paginate @projects
      
  / .block_content ends
  .bendl
  .bendr
